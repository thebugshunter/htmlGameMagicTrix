  <!-- 9. Riddlers Corner -->
  <div class="section" id="riddlersSection">
    <h2>9. Riddlers Corner</h2>
    <div id="riddleDisplay">Here a riddle will appear...</div>
    <div id="riddleAnswer" style="opacity: 0;">Answer: ...</div>
    <button id="revealRiddleBtn" style="margin-right: 10px;">Show Answer</button>
    <button id="nextRiddleBtn">Next Riddle</button>
    <p>Try solving the riddle before revealing its answer!</p>
  </div>

  <script>
    // 1. Flip Card Logic
    document.getElementById('flipCard').addEventListener('click', function() {
      this.classList.toggle('flipped');
    });

    // 2. Vanishing Text Logic
    document.getElementById('vanishBtn').addEventListener('click', function() {
      const txtEl = document.getElementById('vanishText');
      txtEl.classList.toggle('hidden');
      this.textContent = txtEl.classList.contains('hidden') ? 'Reappear' : 'Disappear';
    });

    // 3. Magic 8-Ball Predictor Logic
    const responses = [
      "It is certain.",
      "Reply hazy, try again.",
      "Don't count on it.",
      "Yes, definitely!",
      "My reply is no.",
      "Signs point to yes.",
      "Ask again later."
    ];
    document.getElementById('magic8').addEventListener('click', () => {
      const randomIndex = Math.floor(Math.random() * responses.length);
      document.getElementById('magicResponse').textContent = responses[randomIndex];
    });

    // 4. Confetti Explosion Logic
    document.getElementById('confettiBtn').addEventListener('click', () => {
      const container = document.getElementById('confettiContainer');
      container.innerHTML = ''; // Clear previous confetti
      for (let i = 0; i < 30; i++) {
        const confetti = document.createElement('div');
        confetti.classList.add('confetti');
        confetti.style.left = Math.random() * 100 + '%';
        const colors = ['#ff595e', '#ffca3a', '#8ac926', '#1982c4', '#6a4c93'];
        confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
        confetti.style.animationDelay = Math.random() + 's';
        container.appendChild(confetti);
      }
    });

    // 5. Wacky Word Morphing Logic
    const phrases = [
      "Abracadabra!",
      "Hocus Pocus!",
      "Open Sesame!",
      "Alakazam!",
      "Presto Chango!",
      "Shazam!"
    ];
    document.getElementById('morphText').addEventListener('click', () => {
      const textEl = document.getElementById('morphText');
      const currentText = textEl.textContent;
      let newPhrase;
      do {
        newPhrase = phrases[Math.floor(Math.random() * phrases.length)];
      } while (newPhrase === currentText);
      
      textEl.style.opacity = 0;
      setTimeout(() => {
        textEl.textContent = newPhrase;
        const colors = ['#ff595e', '#ffca3a', '#8ac926', '#1982c4', '#6a4c93'];
        textEl.style.color = colors[Math.floor(Math.random() * colors.length)];
        textEl.style.opacity = 1;
      }, 500);
    });

    // 6. Wizard's Portal Reveal Logic
    document.getElementById('portalBtn').addEventListener('click', () => {
      document.getElementById('portalOverlay').classList.add('active');
    });
    document.getElementById('closePortalBtn').addEventListener('click', () => {
      document.getElementById('portalOverlay').classList.remove('active');
    });

    // 7. Mystic Shape Shifter Logic
    document.getElementById('morphShape').addEventListener('click', () => {
      const shapeEl = document.getElementById('morphShape');
      shapeEl.classList.toggle('square');
    });

    // 9. Riddlers Corner Logic
    const riddles = [
      {
        question: "I speak without a mouth and hear without ears. I have no body, but I come alive with wind. What am I?",
        answer: "An echo"
      },
      {
        question: "I come from a mine and get surrounded by wood always. Everyone uses me. What am I?",
        answer: "Pencil lead"
      },
      {
        question: "I have keys but no locks, space but no rooms. You can enter, but can't go outside. What am I?",
        answer: "A keyboard"
      }
    ];
    let currentRiddleIndex = -1;
    function loadNewRiddle() {
      let newIndex;
      do {
        newIndex = Math.floor(Math.random() * riddles.length);
      } while (newIndex === currentRiddleIndex);
      currentRiddleIndex = newIndex;
      const riddle = riddles[currentRiddleIndex];
      document.getElementById("riddleDisplay").textContent = riddle.question;
      document.getElementById("riddleAnswer").textContent = "Answer: " + riddle.answer;
      document.getElementById("riddleAnswer").style.opacity = 0;
      document.getElementById("revealRiddleBtn").textContent = "Show Answer";
    }
    
    document.getElementById("revealRiddleBtn").addEventListener("click", () => {
      const answerEl = document.getElementById("riddleAnswer");
      if (answerEl.style.opacity == 0 || answerEl.style.opacity === "") {
        answerEl.style.opacity = 1;
        document.getElementById("revealRiddleBtn").textContent = "Hide Answer";
      } else {
        answerEl.style.opacity = 0;
        document.getElementById("revealRiddleBtn").textContent = "Show Answer";
      }
    });
    
    document.getElementById("nextRiddleBtn").addEventListener("click", loadNewRiddle);
    
    // Load an initial riddle on page load:
    loadNewRiddle();
  </script>
</body>
</html>
